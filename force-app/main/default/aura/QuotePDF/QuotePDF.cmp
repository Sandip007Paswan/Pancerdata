<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId,force:hasSObjectName,force:lightningQuickAction" controller="QuotePDFController">
	
    <aura:attribute name="drawingId" type="String"/>
    <aura:attribute name="drawingSize" type="String"/>
    <aura:attribute name="showSpinner" type="Boolean" default="false"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <div class="slds-align_absolute-center">
        <lightning:fileCard fileId="{!v.drawingId}"/>                      
    </div>
    <div class="slds-text-align_center slds-m-top_x-small">
        File Size: {!v.drawingSize}
    </div>
    
    <c:filePreviewer aura:id="lwc" recordId="{!v.drawingId}" onclose="{!c.closeQuickAction}">
    </c:filePreviewer>
    
    <aura:if isTrue="{!v.showSpinner}">
    	<lightning:spinner alternativeText="Loading" size="small" />
    </aura:if>
    
</aura:component>