<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Owner</field>
        <field>Price_Validity_Formula__c</field>
        <field>Name</field>
        <field>Delivery_Formula__c</field>
        <field>Account</field>
        <field>Payment_Method_Formula__c</field>
        <field>Total_List_Price__c</field>
        <field>Warranty_Period_Formula__c</field>
        <field>Total_Discount__c</field>
        <field>Margin_M_I__c</field>
        <field>Amount2__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Branch_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Branch Manager</label>
        <name>Branch_Manager</name>
    </approvalStep>
    <description>This is the Approval Process for Customised Engineering Solutions Enquiries.</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND (2 OR 3) AND 4</booleanFilter>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Customised Engineering Solution</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Pricing</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Analysis</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Line_Item_Count__c</field>
            <operation>notEqual</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Move_Stage_To_Quotation</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notification_Success</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Quotation_Approved_Checked</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Move_to_Pricing</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notification_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Request</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>M&amp;I Approvals</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Branch_Manager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Pricing</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
