<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>OrderNumber</field>
        <field>Owner</field>
        <field>Account</field>
        <field>TotalAmount</field>
        <field>Margin_Min2__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Branch_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Branch Manager</label>
        <name>Branch_Manager</name>
    </approvalStep>
    <description>This is the approval process for Standalone Orders created by Sales Co. It will go through a 1 tier approval through just the Branch Manager only.</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND
(
TEXT(Status) = &apos;Order Entry&apos;,
RecordType.DeveloperName= &apos;Recurring_Orders&apos;,
Sent_for_Approval__c = FALSE,
Owner:User.Profile.Name = &apos;Pansar Branch Management&apos;
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_To_Notify</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Move_to_Submit</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Move_back_to_Order_Entry</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejected_To_Notify</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Sent_for_Approval_Unchecked</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Move_to_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Sent_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Sales Coordinator Standalone Orders</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Branch_Manager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>3</processOrder>
    <recallActions>
        <action>
            <name>Move_back_to_Order_Entry</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Sent_for_Approval_Unchecked</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
