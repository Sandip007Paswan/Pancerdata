<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Amount</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Sales_Coordinator__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submit to Sales Coordinator</label>
        <name>Submit_To_Sales_Coordinator</name>
    </approvalStep>
    <description>This approval process brings the Sales Coordinator to review before pushing it to Oracle. If the Enquiry Owner&apos;s profile is a Sales Co, then Sales Co will be exempted from this review approval.</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND 
( 
RecordType.DeveloperName=&apos;Customised_Engineering_Solution&apos;,
TEXT(StageName)=&apos;Quotation&apos;, 
NOT(ISBLANK(TEXT(Close_Reason__c))), 
Quotation_Accepted__c = TRUE, 
Owner.Profile.Name &lt;&gt; &apos;Pansar Branch Management&apos; 
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Sales_Co_Reviewed</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Sales_Co_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Stage_Submit</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Review (M&amp;I)</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Sales_Coordinator__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>4</processOrder>
    <recallActions>
        <action>
            <name>Move_Stage_To_Quotation</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Quotation_Accepted_Unchecked</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
