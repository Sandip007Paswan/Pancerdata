<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Owner</field>
        <field>Price_Validity_Formula__c</field>
        <field>Name</field>
        <field>Delivery_Formula__c</field>
        <field>Account</field>
        <field>Payment_Method_Formula__c</field>
        <field>Amount</field>
        <field>Warranty_Period_Formula__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Branch_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Branch Manager Approval</label>
        <name>Branch_Manager_Approval</name>
    </approvalStep>
    <description>This is the Approval Process for Spare Part Enquiries.</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Spare Parts</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Upload,Pricing</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Line_Item_Count__c</field>
            <operation>notEqual</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Notification_Success</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Quotation</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Quotation_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Notification_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Pricing</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Request2</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Spare Parts</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Branch_Manager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>5</processOrder>
    <recallActions>
        <action>
            <name>Pricing</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
